<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ripple effect -->
    <item android:id="@android:id/mask">
        <ripple android:color="#A6E11AE8">
            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <solid android:color="#B7FBFBFB" /> <!-- Replace "@color/default_background_color" with your desired default background color -->
                    <corners android:radius="14dp"/>
                </shape>
            </item>
        </ripple>
    </item>

    <!-- Default background color -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#8ADCD8D8" /> <!-- Replace "@color/default_background_color" with your desired default background color -->
            <corners android:radius="14dp"/>
        </shape>
    </item>
</layer-list>

